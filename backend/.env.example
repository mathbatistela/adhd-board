# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database Configuration (external database)
DATABASE_URL=postgresql://adhd_board_user:password@database.local.batistela.tech:5432/adhd_board_database

# Printer Configuration
# Printer USB configuration is auto-detected at startup (searches for vendor ID 0x6868)
# The printer's USB parameters (product_id, interface, endpoints) are automatically extracted
# Set PRINTER_ENABLED=False to use mock printer for testing
#
# IMPORTANT: For USB printer access, update docker-compose.yml group_add with your host's lp group:
#   Run: getent group lp
#   Update group_add in docker-compose.yml with the GID (number after second colon)
PRINTER_ENCODING=utf-8
PRINTER_ENABLED=True

# Thermal Printer Specs
MAX_THERMAL_WIDTH_PX=384
THERMAL_DPI=203
BOTTOM_MARGIN_MM=15.0

# Application Settings
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=16777216

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# API Documentation
API_TITLE=ADHD Board API
API_VERSION=1.0.0
OPENAPI_VERSION=3.1.0

# CORS (comma-separated origins or *)
CORS_ORIGINS=*
