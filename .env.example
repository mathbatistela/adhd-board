# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database Configuration (external database)
DATABASE_URL=postgresql://adhd_board_user:password@192.168.237.103:5432/adhd_board_database

# Printer Configuration (USB IDs in DECIMAL - find with lsusb and convert from hex)
# Example: 0x6868 = 26728, 0x0200 = 512, 0x81 = 129, 0x03 = 3
PRINTER_VENDOR_ID=26728
PRINTER_PRODUCT_ID=512
PRINTER_INTERFACE=0
PRINTER_IN_ENDPOINT=129
PRINTER_OUT_ENDPOINT=3
PRINTER_ENCODING=utf-8
PRINTER_ENABLED=True

# Thermal Printer Specs
MAX_THERMAL_WIDTH_PX=384
THERMAL_DPI=203
BOTTOM_MARGIN_MM=15.0

# Application Settings
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=16777216

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# API Documentation
API_TITLE=ADHD Board API
API_VERSION=1.0.0
OPENAPI_VERSION=3.1.0

# CORS (comma-separated origins or *)
CORS_ORIGINS=*
